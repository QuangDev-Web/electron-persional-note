{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ]
}